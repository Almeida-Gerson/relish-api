{
  "compilerOptions": {
    "target": "ES6",                   
    "module": "commonjs",              
    "outDir": "./dist",                
    "rootDir": "./",                
    "esModuleInterop": true,           
    "strict": true,                    
    "skipLibCheck": true,              
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "netlify/functions/**/*"],
  "exclude": ["node_modules"]
}